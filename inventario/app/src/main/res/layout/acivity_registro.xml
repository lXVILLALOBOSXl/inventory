<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/backgroundregistro"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textSize="35dp"
        android:textStyle="italic"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/etCorreoIniciarSesion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textSize="35dp"
        android:textStyle="italic"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/etContrasenaIniciarSesion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        />
    <Button
        android:id="@+id/btnIngresarIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Ingresar!"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/buttoningresar"
        android:onClick="ingresar"
        />

</LinearLayout>