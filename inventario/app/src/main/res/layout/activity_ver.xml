<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background3"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Imagen:"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:id="@+id/ivProductotarjeta"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:text="CÃ³digo del producto:"
                    />
                <TextView
                    android:id="@+id/lblCodigo"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:text="Nombre del producto:"
                    />
                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:text="Marca del producto:"
                    />
                <TextView
                    android:id="@+id/lblMarca"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:text="Cantidad del producto:"
                    />
                <TextView
                    android:id="@+id/lblCantidad"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:text="Presentacion del producto:"
                    />
                <TextView
                    android:id="@+id/lblPresentacion"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:text="Descripcion:"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/lblDescripcion"
                    android:layout_width="match_parent"
                    android:textColor="#B71C1C"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:text="Unidades del producto:"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/lblUnidades"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:text="Precio:"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/lblPrecio"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:text="Categoria:"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/lblCategoria"
                    android:layout_width="400dp"
                    android:textColor="#B71C1C"
                    android:layout_height="35dp"
                    android:textSize="24sp"
                    />
            </LinearLayout>

            <Button
                android:onClick="llamar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="llamar" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </TableLayout>
</ScrollView>
